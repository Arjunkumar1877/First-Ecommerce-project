
<%- include('../partials/user/userHeader.ejs') %>


<body>   

    <section style="background-color: #eee;padding-top: 50px;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center bg-dark text-white">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width:50px;">
            <h5 class="my-3"><%= user.name.substring(0,5) %></h5>
            <div class="d-flex justify-content-center mb-2">
              <a href="/user/edit-profile"><button type="button" class="btn btn-outline-primary ms-1">Edit profile</button></a>
            </div>
          </div>

          

        </div>

        
        <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <a href="/user/manage-address"><i class="fa-solid fa-address-book" style="margin-left: -100px; font-size: 35px;"></i><span style="margin-left: 20px; font-size: 20px;">MANAGE ADDRESSES</span></a>
            </div>
          </div>

        <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <a href="/user/users-orders"><i class="fa-solid fa-bag-shopping" style="margin-left: -220px; font-size: 35px;"></i><span style="margin-left: 20px; font-size: 20px;">ORDERS</span></a>
            </div>
          </div>

          <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <a href="/user/wallet"><i class="fa-solid fa-credit-card" style="margin-left: -195px; font-size: 35px;"></i><span style="margin-left: 20px; font-size: 20px;">WALLET</span></a>
            </div>
          </div>

          <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <a href="/user/logout"><i class="fa-solid fa-power-off" style="margin-left: -220px; font-size: 35px;"></i><span style="margin-left: 20px; font-size: 20px;">LOGOUT</span></a>
            </div>
          </div>

   

      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.name %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.email %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.phone %></p>
              </div>
            </div>
            <hr>
           
          </div>
        </div>


    



        
          


        </div>
      </div>
    </div>
  </div>
</section>




<%- include('../partials/user/userFooter.ejs') %>




