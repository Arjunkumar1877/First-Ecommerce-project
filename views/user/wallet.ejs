<%- include('../partials/user/userHeader.ejs') %>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet Page</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #4b6cb7, #182848);
            color: #fff;
            margin: 0;
            padding: 0;
            
           
        }

        #wallet-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            background: rgba(255, 255, 255, 0.1);
        }

        #balance {
            font-size: 24px;
            margin-bottom: 20px;
        }

        #transaction-list {
            list-style-type: none;
            padding: 0;
        }

        .transaction {
            margin-bottom: 10px;
            padding: 12px;
            border-radius: 8px;
            font-size: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .credit {
            background-color: rgba(0, 255, 60, 0.5);
            color: #ffffff;
        }

        .debit {
            background-color: rgba(255, 12, 32, 0.5);
            color: #ffffff;
        }

        #add-funds, #withdraw-funds {
            margin-top: 20px;
            font-size: 18px;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: bold;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: filter 0.3s ease;
        }

        #add-funds {
            background-color: #28a745;
        }

        #withdraw-funds {
            background-color: #dc3545;
        }

        #add-funds:hover, #withdraw-funds:hover {
            filter: brightness(85%);
        }

        .transaction-time {
            font-size: 14px;
            color: #ccc;
        }
    </style>
</head>
<body>

<div id="wallet-container" class="container">
    <% if (balance) { %>
        <h2 class="text-center mb-4">Your Wallet</h2>
        <div id="balance" class="text-center mb-4">Balance: â‚¹ <%= balance.walletBalance %>.00</div>
        <% } else { %>
            <h2 class="text-center mb-4">Your Wallet is Empty</h2>
        <% } %>

        <h3 class="mb-3">Transaction History</h3>
        <ul id="transaction-list">
            <% transactions.transaction.forEach((trans)=> { %>
                <li class="transaction <%= trans.mode === 'Credit' ? 'credit' : 'debit' %>">
                    <%= trans.mode %>&nbsp;
                    <%= trans.amount %>
                    <span class="transaction-time"><%= trans.time.toLocaleDateString() %> <%= trans.time.toLocaleTimeString() %></span>
                </li>
            <% }); %>
        </ul>
    

    
</div>

</body>
</html>
