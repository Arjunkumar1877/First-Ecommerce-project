<%- include('../partials/admin/adminHeader.ejs') %>


<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel - User Management</title>
  <style>


    h1{
      text-align: center;
      background-color: #1b5e01;
      color: #fff;
      padding: 20px 0;
      margin: 0;
    }

    h2{
      text-align: center;
      font-family:  sans-serif;
      color: #000000;
      font-size: 40px;
      padding: 20px 0;
      margin: 0;
    }


    .container {
      padding: 80px;
    }

    table {
      width: 100%;
      background-color: #fff;
      border-collapse: collapse;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #1b5e01;
      color: #fff;
    }

    .actions {
      text-align: center;
    }

    .button {
      display: inline-block;
      padding: 6px 12px;
      background-color: #1f5604;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
    }

    .button.edit {
      background-color: #059b2d;
    }

    .button.delete {
      background-color: #ff0800;
    }

    .form {
      width: 50%;
      background-color: #fff;
      padding: 20px;
      margin: 20px auto;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    input[type="text"], input[type="email"], input[type="password"] {
      width: 100%;
      padding: 10px;
      margin: 6px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .form button {
      background-color: #f2b100;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>

 

  <div class="container">
    <h1>User Management</h1>
    <h2>User List</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      <% user.forEach((person,index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= person.name %></td>
          <td><%= person.email %></td>
          <td><%= person.phone %></td>
          <td>
            <% if (person.status) { %>
              <span class="badge badge-success">Active</span>
            <% } else { %>
              <span class="badge badge-danger">Blocked</span>
            <% } %>
          </td>
          <td class="actions">
            <% if (person.status) { %>
              <a href="/admin/unblock/<%= person._id %>" class="button delete">Block</a>
            <% } else { %>
              <a href="/admin/block/<%= person._id %>" class="button edit ">Unblock</a>
              
            <% } %>
          </td>
          
        </tr>
      <% }) %>
    
    </table>
  </div>

  
</body>
</html>
